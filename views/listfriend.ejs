<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1">

    <title>친구 리스트</title>

    <link href="/public/semantic.min.css" rel="stylesheet">

    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        html {
            width: 100%;
            height: 100%;
        }

        body {
            width: 100%;
            height: 100%;
            color: #000;
            background-color: #fff;
        }

        .container {
            margin-right: auto;
            margin-left: auto;
            padding-left: 20px;
            padding-right: 20px;
        }

        span {
            color: #333;
        }

        #board_title {
            font-size: 1.2em;
            font-weight: bold;
            color: teal;
        }

    </style>


    <script src="/public/jquery-3.5.1.min.js"></script>
    <script src="/public/semantic.min.js"></script>



</head>

<body>

    <div class="container">
        <br>


        <!--            <a class="ui blue ribbon label">게시판</a>-->
        <span id="board_title"><%=title %></span>
        <div class="ui blue fluid card">
            <div class="ui two column relaxed grid">
                <%
                    var friends_ = friends._doc.friends;
                    var cur_user = user_info._id;
                    var whos_friend = friends._doc.user_id;
                    console.log('=============================================');
//                    console.dir(friends_);
                    
                %>
                <% console.log('현재 유저 : ' + cur_user + ' 친구 목록 주인 : ' + whos_friend._id);
                if(cur_user == whos_friend._id) { %>
                <% var requests_ = friends._doc.requests;
                     %>
                <div class="column">
                    <div class="ui raised segment">
                        <div class="content">
                            <% if(friends_.length>0) { %>
                            <h3 class="ui block header">나의 친구 목록</h3>

                            <%      friends_.forEach(function(friend) { 
                            console.log(friend);
                            console.log(friend.friends_id);%>
                            <div class="ui massive horizontal divided list">
                                <div class="item">
                                    <img class="ui avatar image" src="/images/avatar/small/helen.jpg">
                                    <div class="content">
                                        <div class="header"><a><%= friend.friends_id.name %></a></div>
                                    </div>
                                </div>
                            </div>
                            <%      });
                            } %>

                        </div>
                    </div>
                </div>


                <div class="column">
                    <div class="ui raised segment">
                        <div class="content">
                            <% if(requests_ != undefined) { %>
                            <%      if(requests_.length>0) { %>
                            <h4 class="ui block header">나의 친구 요청</h4>
                            <%          requests_.forEach(function(request) { %>
                            <div class="ui middle aligned divided list">
                                <div class="item">
                                    <div class="right floated content">
                                        <div class="ui primary button">수락</div>
                                        <div class="ui  button">거절</div>
                                    </div>
                                    <img class="ui avatar image" src="/images/avatar/small/helen.jpg">
                                    <div class="content">
                                        <div class="header"><a><%= request.requests_id.name %></a></div>
                                    </div>
                                </div>
                            </div>
                            <%          });
                                }
                            }%>

                        </div>
                    </div>
                </div>
                <% } else { %>
                <div class="ui raised segment">
                    <div class="content">
                        <% if(friends_.length>0) { %>
                        <h3 class="ui dividing header"><%=whos_friend.name%>의 친구 목록</h3>

                        <%      friends_.forEach(function(friend) { %>
                        <div class="ui massive horizontal divided list">
                            <div class="item">
                                <img class="ui avatar image" src="/images/avatar/small/helen.jpg">
                                <div class="content">
                                    <div class="header"><a><%= friend.friends_id.name %></a></div>
                                </div>
                            </div>
                        </div>
                        <%      });
                        }
                    }%>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
